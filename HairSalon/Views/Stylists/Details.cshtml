@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models
<h2>@Model.FirstName @Model.LastName Details</h2>

<hr />

<p>First Name: @Model.FirstName</p>

<p>Last Name: @Model.LastName</p>

<p>Phone Number: @Model.PhoneNumber</p>


<br>
<br>
<h3>Client List</h3>
<div class="panel">

<ul>
@if (@Model.Clients.Count == 0)
{
  <p>no items found</p>
}

@foreach (Client client in @Model.Clients)
{
  <li>@Html.ActionLink($"{client.FirstName} {client.LastName} ", "Details", "Clients", new {id = client.ClientId})</li>
}
</ul>
</div>

<p>@Html.ActionLink("Add Client", "Create", "Clients", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId})</p>
<p>@Html.ActionLink("Back to Stylists", "Index")</p>