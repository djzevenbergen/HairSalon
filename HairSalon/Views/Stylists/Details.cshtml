@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models
<h2>Category Details</h2>

<hr />

<ul>
@if (@Model.Clients.Count == 0)
{
  <p>no items found</p>
}

@foreach (Client client in @Model.Clients)
{
  <li>@Html.ActionLink($"{client.FirstName} {client.LastName} ", "Details", "Clients", new {id = client.ClientId}) | @client.Stylist.FirstName + " " + @client.Stylist.LastName</li>
}
</ul>

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<p>@Html.ActionLink("Add Client", "Create", "Clients", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId})</p>
<p>@Html.ActionLink("Back to List", "Index")</p>