@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@using System.Collections.Generic;
@model List<HairSalon.Models.Client>;

<h2>Search Results:</h2>

<p>Clients</p>
@foreach(Client client in @Model["client"])
{
   <li>@Html.ActionLink($"{client.FirstName} {client.LastName}" , "Details", new {id = client.ClientId})</li>
}

<p>Stylists</p>
@foreach(Stylist stylist in @Model["stylist"])
{
   <li>@Html.ActionLink($"{stylist.FirstName} {stylist.LastName}" , "Details", new {id = stylist.StylistId})</li>
}