@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@using System.Collections.Generic;
@model List<HairSalon.Models.Client>;

<h2>Search Results:</h2>

<p>Clients</p>

@if (Model.Count == 0)
{
  <p>No clients match this name</p>
}
@foreach(Client client in Model)
{
   <li>@Html.ActionLink($"{client.FirstName} {client.LastName}" , "Details", new {id = client.ClientId})</li>
}

